@model InlibrisVeritas.Models.Post

@{
    ViewData["Title"] = "Radera inlägg";
}

    <div class="parallax-blogg"></div>
    <div class="welcome-div">
        <h2>Radera inlägg</h2>

        <h3>Är du säker på att du vill ta bort inlägget?</h3>
        <div class="detail-div">
            <h3>
                @Html.DisplayFor(model => model.Title)
            </h3>

                @Html.Raw(Model.Content)

            <h4>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </h4>
            <img src="@Html.DisplayFor(model => model.ImageUrl)" alt="bloggbild" />
            <h4>
                @Html.DisplayNameFor(model => model.Created)
            </h4>
            <p>
                @Html.DisplayFor(model => model.Created)
            </p>
            <h4>
                @Html.DisplayNameFor(model => model.UserId)
            </h4>
            <p>
                @Html.DisplayFor(model => model.User.UserName)
            </p>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="PostId" />
            <input type="submit" value="Radera" class="btn btn-danger" />
            <a asp-action="Index">Tillbaka till inlägg</a>
        </form>
    </div>
